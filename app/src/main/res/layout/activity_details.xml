<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="com.example.abhishekaryan.storageapp.Activities.DetailsActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/apple_pie"
        android:id="@+id/activity_details_imageView"
        android:padding="12dp"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/activity_details_itemNameTextView"
        android:layout_below="@id/activity_details_imageView"
        android:text="When your WebView overrides URL loading, it automatically accumulates a history of visited web pages."
        />



        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_details_itemNameTextView"
            android:id="@+id/activity_details_webView"
            android:scrollbars="vertical"
            />

    


</RelativeLayout>
